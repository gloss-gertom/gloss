<%= form_tag session_path, :id => 'login_form'  do %>
    <%= label_tag :username %>
    <%= text_field_tag :username, 'username', :onfocus => 'myFocus(this);', :onblur => 'myBlur(this)' %>
    <%= label_tag :password %>
    <%= password_field_tag :password, '*****', :onfocus => 'myFocus(this);', :onblur => 'myBlur(this)' %>
    <%=  submit_tag 'login', :id => 'login_submit' %>
<% end %>