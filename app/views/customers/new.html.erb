<h1 id="registration">Registration form</h1>

<%=  form_for(@customer) do |f| %>

    <% if @customer.errors.any? %>
        <div id="error">
          <p><%= pluralize(@customer.errors.count, "error") %>
            prevented your details from being saved</p>
          <ul>
            <% @customer.errors.full_messages.each do |msg| %>
                <li><%=  msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <%= field_set_tag 'Login details' do %>
        <div>
          <%= f.label :username %>
          <%= f.text_field :username %>
        </div>
        <div>
          <%= f.label :hashed_password %>
          <%= f.text_field :hashed_password %>
        </div>
    <%  end %>
    <%= field_set_tag 'Contact/Shipping details' do %>
        <div>
          <%= f.label :first_name %>
          <%= f.text_field :first_name %>
        </div>
        <div>
          <%= f.label :last_name %>
          <%= f.text_field :last_name %>
        </div>
        <div>
          <%= f.label :address_1 %>
          <%= f.text_field :address_1 %>
        </div>
        <div>
          <%= f.label :address_2 %>
          <%= f.text_field :address_2 %>
        </div>
        <div>
          <%= f.label :address_3 %>
          <%= f.text_field :address_3 %>
        </div>
        <div>
          <%= f.label :city %>
          <%= f.text_field :city %>
        </div>
        <div>
          <%= f.label :postcode %>
          <%= f.text_field :postcode %>
        </div>
        <div>
          <%= f.label :county %>
          <%= f.text_field :county %>
        </div>
        <div>
          <%= f.label :country %>
          <%= f.text_field :country %>
        </div>
        <div>
          <%= f.label :tel_no %>
          <%= f.text_field :tel_no %>
        </div>
        <div>
          <%= f.label :email %>
          <%= f.email_field :email %>
        </div>
        <div id="submit">
          <%= f.submit "Register" %>
        </div>
    <% end %>
<% end %>


